{% block page_content %}


    <section class="login-block">
        <div class="container" style="min-width: 400px; max-width: 400px;">
            <div class="row">
                <div class="col-12 login-sec">
                    <p class="text-center"><img src="http://www.casabonsucesso.com.br/img/LOGO_COMPLETO_200px.jpg"/>
                    </p>
                    <h2 class="text-center">Cadastro de Currículos</h2>

                    <form class="login-form" action="/" method="post" id="loginForm">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('land') }}"/>

                        {% if step == 'land' %}

                            <div class="form-group">
                                <label for="cpf">CPF</label>
                                <input type="text" class="form-control cpf" name="cpf" id="cpf" required/>
                            </div>
                            <div class="form-group">
                                <label </label>
                                <div class="g-recaptcha" data-sitekey="6LdGOHwUAAAAADFGjadst7Tv7MFfU7YUnouJWqpE"></div>
                            </div>
                            <div class="form-check">
                                <button type="submit" name="btnIniciar" class="btn btn-login float-right"
                                        value="Iniciar"><i class="fas fa-play-circle"></i> Iniciar
                                </button>
                            </div>

                        {% elseif step == 'iniciado' %}

                            <div class="form-group">
                                <label for="cpf">CPF</label>
                                <input type="text" class="form-control cpf" name="cpf" id="cpf"
                                       value="{{ cpf|default('') }}" readonly/>
                            </div>
                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input type="email" class="form-control email" name="email" id="email" required/>
                            </div>
                            <div class="form-group">
                                <label for="password">Senha</label>
                                <input type="password" class="form-control" name="password" id="password" required/>
                            </div>
                            <div class="form-group">
                                <label for="password2">Repita a Senha</label>
                                <input type="password" class="form-control" name="password2" id="password2"
                                       required/>
                            </div>
                            <div class="alert alert-warning alert-dismissible fade collapse hide" id="alertSenhas"
                                 role="alert">
                                <strong>Atenção!</strong> As senhas não coincidem.
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="form-check">
                                <button type="submit" name="btnNovo" id="btnNovo" class="btn btn-login float-right"
                                        value="Novo">
                                    Enviar
                                </button>
                            </div>

                        {% elseif step == 'login' %}

                            <div class="form-group">
                                <label for="cpf">CPF</label>
                                <input type="text" class="form-control cpf" name="cpf" id="cpf"
                                       value="{{ cpf|default('') }}" readonly/>
                            </div>
                            <div class="form-group">
                                <label for="password_login">Senha</label>
                                <input type="password" class="form-control" name="password_login" id="password_login"/>
                                <small id="emailHelp" class="form-text text-muted text-right">
                                    <button type="button" id="btnEsqueciMinhaSenha" name="btnEsqueciMinhaSenha"
                                            value="Esqueci minha senha"
                                            class="btn btn-sm btn-outline-primary"><i class="far fa-frown"></i> Esqueci
                                        minha senha
                                    </button>
                                </small>
                            </div>
                            <div class="form-check">
                                <button type="submit" name="btnLogin" id="btnLogin" class="btn btn-login float-right"
                                        value="Login"><i class="fas fa-sign-in-alt"></i> Login
                                </button>
                            </div>

                        {% endif %}


                    </form>

